<?xml version="1.0" encoding="utf-8"?>
<com.pappayaed.recyclerviewrows.PresentAbsentRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:src="@mipmap/profilebig" />

        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/circleImageView"
            android:text="Testiung"
            android:textColor="@color/line6" />

        <LinearLayout
            android:id="@+id/presentabsent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/present"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/roundview"
                android:padding="2dp" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/absent"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/roundview"
                android:padding="2dp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/line4" />

</com.pappayaed.recyclerviewrows.PresentAbsentRow>